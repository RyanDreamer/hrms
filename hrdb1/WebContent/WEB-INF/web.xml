<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>hrdb1</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>characterEncodingFilter</filter-name>
    <filter-class>com.hrdb1.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>characterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.hrdb1.servlet.LoginServlet</servlet-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddDeptServlet</servlet-name>
    <servlet-class>com.hrdb1.servlet.AddDeptServlet</servlet-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddDeptServlet</servlet-name>
    <url-pattern>/AddDeptServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RmDeptServlet</servlet-name>
    <servlet-class>com.hrdb1.servlet.RmDeptServlet</servlet-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>RmDeptServlet</servlet-name>
    <url-pattern>/RmDeptServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShowDeptServlet</servlet-name>
    <servlet-class>com.hrdb1.servlet.ShowDeptServlet</servlet-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowDeptServlet</servlet-name>
    <url-pattern>/ShowDeptServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddDimissionServlet</servlet-name>
    <servlet-class>com.hrdb1.servlet.AddDimissionServlet</servlet-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddDimissionServlet</servlet-name>
    <url-pattern>/AddDimissionServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RmDimissionServlet</servlet-name>
    <servlet-class>com.hrdb1.servlet.RmDimissionServlet</servlet-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>RmDimissionServlet</servlet-name>
    <url-pattern>/RmDimissionServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShowDimissionServlet</servlet-name>
    <servlet-class>com.hrdb1.servlet.ShowDimissionServlet</servlet-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowDimissionServlet</servlet-name>
    <url-pattern>/ShowDimissionServlet</url-pattern>
  </servlet-mapping>
</web-app>